#‚ñà‚ñì‚ñí‚ñë Set colors
[colors]
foreground          = ${xrdb:color7}
background          = ${xrdb:color0}
power               = ${xrdb:color5}
focused             = ${xrdb:color7}
unfocused           = ${xrdb:color4}

red                 = #cc4a4a
green               = #90BD39
yellow              = #F09F41
blue                = #2A7ABE
violet              = #a763bb
cyan                = #18BEA8
white               = #fafafa

[global/wm]
margin-top           = 0
margin-bottom        = 25
override-redirect    = true


#‚ñà‚ñì‚ñí‚ñë Bar - Laptop
[bar/eDP-1]
monitor             = ${env:MONITOR:}
monitor-strict      = false
enable-ipc          = true
override-redirect   = true
dpi                 = 144
wm-restack          = bspwm
width               = 100%
height              = 2%
radius              = 0%
offset-x            = 0%
offset-y            = 0%
top                 = true
fixed-center        = true
background          = ${colors.background}
foreground          = ${colors.foreground}
font-0              = SF Mono:style=Regular:pixelsize=11:antialias=true;0
font-1              = Lohit Hindi:style=Regular:size=10:antialias=true;0
font-2              = Font Awesome 5 Brands,Font Awesome 5 Brands Regular:style=Regular:size=10:antialias=true;0
font-3              = Font Awesome 5 Free,Font Awesome 5 Free Solid:style=Solid:size=10:antialias=true;0
font-4              = Font Awesome 5 Free,Font Awesome 5 Free Regular:style=Regular:size=10:antialias=true;0
modules-left        = powermenu bspwm
modules-center      = spotibar
modules-right       = runelite weather backlight pulseaudio battery network date dropbox
spacing             = 2
padding-left        = 2
padding-right       = 2
scroll-up           = bspwm-desknext
scroll-down         = bspwm-deskprev


