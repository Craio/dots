[module/pulseaudio]
type = internal/pulseaudio

; Sink to be used, if it exists (find using `pacmd list-sinks`, name field)
sink = alsa_output.pci-0000_12_00.3.analog-stereo

; Use PA_VOLUME_UI_MAX (~153%) if true, or PA_VOLUME_NORM (100%) if false
use-ui-max = false
interval = 5

format-volume = <ramp-volume><label-volume>
format-volume-padding   = 2
ramp-volume-foreground  = ${colors.violet}
ramp-volume-0 = Ôö©
ramp-volume-1 = ÔÄß
ramp-volume-2 = ÔÄ®
click-right = pavucontrol &
click-middle = blueman-manager
label-volume = %percentage%%

label-muted-padding     = 2
label-muted             =  muted
label-muted-foreground  = ${colors.red}



#‚ñà‚ñì‚ñí‚ñë Date and Time
[module/date]
type                      = internal/date
interval                  = 1
date                      =
date-alt                  = " %A %d %B"
time                      = "%I:%M"
time-alt                  = "%I:%M:%S"
format-prefix             = ÔÄó
format-prefix-foreground  = ${colors.power}
format-padding            = 2
label                     = "%date% %time%"


#‚ñà‚ñì‚ñí‚ñë Battery
[module/battery]
type                      = internal/battery
full-at                   = 99
# Use the following command to list batteries and adapters:
# $ ls -1 /sys/class/power_supply/
battery                   = BAT0
adapter                   = AC
poll-interval             = 2
time-format               = %H:%M
format-charging           = <animation-charging><label-charging>
format-discharging        = <ramp-capacity><label-discharging>
format-full               = <ramp-capacity>
label-charging            = %percentage%
label-discharging         = %time%
ramp-capacity-foreground  = ${colors.green}
ramp-capacity-0           = ÔâÉ
ramp-capacity-1           = ÔâÉ
ramp-capacity-2           = ÔâÇ
ramp-capacity-3           = ÔâÅ
ramp-capacity-4           = ÔâÄ
animation-charging-foreground  = ${colors.green}
animation-charging-0      = ÔâÑ
animation-charging-1      = ÔâÉ
animation-charging-2      = ÔâÇ
animation-charging-3      = ÔâÅ
animation-charging-4      = ÔâÄ
animation-charging-framerate = 1000


#‚ñà‚ñì‚ñí‚ñë Power Menu
[module/powermenu]
type                        = custom/menu
label-open                  = ÔÄë
label-open-foreground       = ${colors.power}
label-open-background       = ${colors.background}
label-open-padding          = 1
label-close                 = ÔÅó
label-close-padding         = 1
label-close-foreground      = ${colors.red}
label-separator             = ‚èΩ
label-separator-foreground  = ${colors.unfocused}

menu-0-0      = Logout
menu-0-0-exec = menu-open-1
menu-0-1      = Reboot
menu-0-1-exec = menu-open-2
menu-0-2      = Shutdown
menu-0-2-exec = menu-open-3
#‚ñà‚ñì‚ñí‚ñë Blank character for | decoration
menu-0-3      = ‚†Ä

menu-1-0      = No
menu-1-0-exec = menu-open-0
menu-1-1      = Yes
menu-1-1-exec = bspc quit
#‚ñà‚ñì‚ñí‚ñë Blank character for | decoration
menu-1-2       = ‚†Ä

menu-2-0      = No
menu-2-0-exec = menu-open-0
menu-2-1      = Yes
menu-2-1-exec = systemctl reboot
#‚ñà‚ñì‚ñí‚ñë Blank character for | decoration
menu-2-2      = ‚†Ä

menu-3-0      = No
menu-3-0-exec = menu-open-0
menu-3-1      = Yes
menu-3-1-exec = systemctl poweroff
#‚ñà‚ñì‚ñí‚ñë Blank character for | decoration
menu-3-2      = ‚†Ä


#‚ñà‚ñì‚ñí‚ñë Backlight
[module/backlight]
type              = internal/backlight
card              = intel_backlight
format            = <label>
format-padding    = 0
label             = ÔÜÖ
label-foreground  = ${colors.yellow}
enable-scroll     = true



[module/xbacklight]
type = internal/xbacklight

; XRandR output to get get values from
; Default: the monitor defined for the running bar
output = eDP-1

; Create scroll handlers used to set the backlight value
; Default: true
enable-scroll = true
; Available tags:
;   <label> (default)
;   <ramp>
;   <bar>
format = <label>

; Available tokens:
;   %percentage% (default)
label = %percentage%%

; Only applies if <ramp> is used
ramp-0 = üåï
ramp-1 = üåî
ramp-2 = üåì
ramp-3 = üåí
ramp-4 = üåë

; Only applies if <bar> is used
bar-width = 10
bar-indicator = |
bar-fill = ‚îÄ
bar-empty = ‚îÄ








#‚ñà‚ñì‚ñí‚ñë Wireless Network
[module/network]
type                          = internal/network
interface                     = wlp0s20f3
interval                      = 2
format-connected              = <label-connected>
format-disconnected           = <label-disconnected>
label-connected               = "  Ôá´"
label-disconnected            = "  Ôá´"
label-connected-foreground    = ${colors.cyan}
label-disconnected-foreground = ${colors.red}


#‚ñà‚ñì‚ñí‚ñë Dropbox
[module/dropbox]
type        = custom/script
exec        = ~/scripts/barbox
interval    = 5
label       = %output%
format      = <label>
click-left  = ~/scripts/barbox --toggle
tail        = true


#‚ñà‚ñì‚ñí‚ñë Weather
[module/weather]
type                      = custom/script
exec                      = ~/scripts/weather
interval                  = 300
format                    = <label>
format-padding            = 2
format-prefix             = "ÔÉÇ  "
format-suffix             = "¬∞"
format-prefix-foreground  = ${colors.white}
format-background         = ${colors.background}
click-left                = xdg-open https://darksky.net/
tail                      = true


#‚ñà‚ñì‚ñí‚ñë Spotibar
[module/spotibar]
type              = custom/script
exec              = ~/scripts/spotibar
exec-if           = pgrep spotify > /dev/null
interval          = 1
click-left        = playerctl -p spotify play-pause
format-foreground = ${colors.foreground}
format-background = ${colors.background}
format-padding    = 1
tail              = true


[module/runelite]
type = custom/ipc
hook-0 = test -e /tmp/rl_state && cat /tmp/rl_state
initial = 1
