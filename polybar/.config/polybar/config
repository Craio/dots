#█▓▒░ Set colors
[colors]
foreground=${xrdb:color7}
background=${xrdb:color0}
power=${xrdb:color5}
focused=${xrdb:color7}
unfocused=${xrdb:color4}

red=#cc4a4a
green=#90BD39
yellow=#F09F41
blue=#2A7ABE
violet=#a763bb
cyan=#18BEA8
white=#fafafa

[global/wm]
margin-top        = 0
margin-bottom     = 25
override-redirect = true


#█▓▒░ Bar - Laptop
[bar/DP-2]
monitor             = ${env:MONITOR:DP-2}
override-redirect   = true
dpi                 = 144
wm-restack          = bspwm
width               = 100%
height              = 2%
radius              = 0%
offset-x            = 0%
offset-y            = 0%
top                 = true
fixed-center        = true
background          = ${colors.background}
foreground          = ${colors.foreground}
font-0              = SF Mono:style=Regular:pixelsize=11:antialias=true;0
font-1              = Lohit Hindi:size=9:antialias=true;0
font-2              = MesloLGS Nerd Font:size=13:antialias=true;0
modules-left        = powermenu bspwm
modules-center      = spotibar
modules-right       = weather backlight volume battery network date dropbox
spacing             = 2
padding-left        = 2
padding-right       = 2
scroll-up           = bspwm-desknext
scroll-down         = bspwm-deskprev


#█▓▒░ Bar - External
[bar/HDMI-0]
monitor             = ${env:MONITOR:HDMI-0}
override-redirect   = true
dpi                 = 144
wm-restack          = bspwm
width               = 100%
height              = 2%
radius              = 0%
offset-x            = 0%
offset-y            = 0%
top                 = true
fixed-center        = true
background          = ${colors.background}
foreground          = ${colors.foreground}
font-0              = SF Mono:style=Regular:pixelsize=11:antialias=true;0
font-1              = Lohit Hindi:size=9:antialias=true;0
font-2              = MesloLGS Nerd Font:size=13:antialias=true;0
modules-left        = powermenu bspwm
modules-center      = spotibar
modules-right       = weather volumeTV battery network date dropbox
spacing             = 2
padding-left        = 2
padding-right       = 2
scroll-up           = bspwm-desknext
scroll-down         = bspwm-deskprev


#█▓▒░ bspwm Module
[module/bspwm]
type                      = internal/bspwm
pin-workspaces            = true
enable-click              = true
enable-scroll             = true
reverse-scroll            = false
label-focused             = %name%
label-focused-foreground  = ${colors.focused}
label-focused-padding     = 1
label-focused-font        = 1
label-occupied            = %name%
label-occupied-foreground = ${colors.unfocused}
label-occupied-padding    = 1
label-occupied-font       = 1
label-urgent              = %name%
label-urgent-foreground   = ${colors.red}
label-urgent-padding      = 1
label-urgent-font         = 1
label-empty               = %name%
label-empty-foreground    = ${colors.background}
label-empty-padding       = 1
label-empty-font          = 1


#█▓▒░ Volume
[module/volume]
type                    = internal/alsa
master-soundcard        = default
speaker-soundcard       = default
headphone-soundcard     = default
master-mixer            = Master
format-volume           = <ramp-volume><label-volume>
format-volume-padding   = 2
module-margin-right     = 0
ramp-volume-0           = 
ramp-volume-1           = 
ramp-volume-2           = 
ramp-volume-foreground  = ${colors.violet}
label-volume            = %percentage%
label-muted-padding     = 2
label-muted             = muted
label-muted-foreground  = ${colors.violet}


#█▓▒░ Volume - External
[module/volumeTV]
type                    = internal/alsa
master-soundcard = default
speaker-soundcard = default
headphone-soundcard = default
master-mixer = Master
format-volume           = <ramp-volume><label-volume>
format-volume-padding   = 2
module-margin-right     = 0
ramp-volume-0           = 
ramp-volume-1           = 
ramp-volume-2           = 
ramp-volume-foreground  = ${colors.violet}
label-volume            = %percentage%
label-muted-padding     = 2
label-muted             = muted
label-muted-foreground  = ${colors.violet}


#█▓▒░ Date and Time
[module/date]
type                      = internal/date
interval                  = 1
date                      =
date-alt                  = " %A %d %B"
time                      = "%I:%M"
time-alt                  = "%I:%M:%S"
format-prefix             = 
format-prefix-foreground  = ${colors.power}
format-padding            = 2
label                     = "%date% %time%"


#█▓▒░ Battery
[module/battery]
type = internal/battery
full-at = 99
# Use the following command to list batteries and adapters:
# $ ls -1 /sys/class/power_supply/
battery = BAT0
adapter = AC
poll-interval = 2
time-format = %H:%M
format-charging = <animation-charging><label-charging>
format-discharging = <ramp-capacity><label-discharging>
format-full = <ramp-capacity>
label-charging = %percentage%
label-discharging = %time%
ramp-capacity-foreground  = ${colors.green}
ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 
animation-charging-foreground  = ${colors.green}
animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-framerate = 1000


#█▓▒░ Power Menu
[module/powermenu]
type                        = custom/menu
label-open                  = 
label-open-foreground       = ${colors.power}
label-open-background       = ${colors.background}
label-open-padding          = 1
label-close                 = 
label-close-padding         = 1
label-close-foreground      = ${colors.red}
label-separator             = ⏽
label-separator-foreground  = ${colors.unfocused}

menu-0-0      = Logout
menu-0-0-exec = menu-open-1
menu-0-1      = Reboot
menu-0-1-exec = menu-open-2
menu-0-2      = Shutdown
menu-0-2-exec = menu-open-3
#█▓▒░ Blank character for | decoration
menu-0-3     = ⠀

menu-1-0      = No
menu-1-0-exec = menu-open-0
menu-1-1      = Yes
menu-1-1-exec = bspc quit
#█▓▒░ Blank character for | decoration
menu-1-2     = ⠀

menu-2-0      = No
menu-2-0-exec = menu-open-0
menu-2-1      = Yes
menu-2-1-exec = systemctl reboot
#█▓▒░ Blank character for | decoration
menu-2-2     = ⠀

menu-3-0      = No
menu-3-0-exec = menu-open-0
menu-3-1      = Yes
menu-3-1-exec = systemctl poweroff
#█▓▒░ Blank character for | decoration
menu-3-2     = ⠀


#█▓▒░ Backlight
[module/backlight]
type              = internal/xbacklight
card              = nvidia_0
format            = <label>
format-padding    = 0
label             = 
label-foreground  = ${colors.yellow}


#█▓▒░ Wireless Network
[module/network]
type                          = internal/network
interface                     = wlp0s20f3
interval                      = 2
format-connected              = <label-connected>
format-disconnected           = <label-disconnected>
label-connected               = "  "
label-disconnected            = "  "
label-connected-foreground    = ${colors.cyan}
label-disconnected-foreground = ${colors.red}


#█▓▒░ Dropbox
[module/dropbox]
type        = custom/script
exec        = ~/scripts/barbox
interval    = 5
label       = %output%
format      = <label>
click-left  = ~/scripts/barbox --toggle
tail        = true


#█▓▒░ Weather
[module/weather]
type                      = custom/script
exec                      = ~/scripts/weather
interval                  = 120
format                    = <label>
format-padding            = 2
format-prefix             = "  "
format-suffix             = "°"
format-prefix-foreground  = ${colors.foreground}
format-background         = ${colors.background}
click-left                = xdg-open https://darksky.net/
tail                      = true


#█▓▒░ Spotibar
[module/spotibar]
type              = custom/script
exec              = ~/scripts/spotibar
exec-if           = pgrep spotify > /dev/null
interval          = 1
click-left        = playerctl -p spotify play-pause
format-foreground = ${colors.foreground}
format-background = ${colors.background}
format-padding    = 1
tail              = true
