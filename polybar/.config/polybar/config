[global/wm]
margin-top        = 0
margin-bottom     = 0
override-redirect = true

;----------------------------------------------------------
;		       B A R
;----------------------------------------------------------
[bar/garden]
monitor             = ${env:MONITOR:LVDS-0}
override-redirect   = true
wm-restack          = bspwm
width               = 100%
height              = 20
margin-top          = 0
offset-x            = 0
offset-y            = 0
top                 = true
;bottom              = true
fixed-center        = true
background          = ${colors.pbackground}
foreground          = ${colors.pforeground}
font-0              = lucy tewi:style=Regular:size=9:antialias=true;0
font-1              = FontAwesome:size=8;
font-2              = Wuncon Siji:size=9;0
font-3              = Lohit Hindi:size=8;
font-4              = MesloLGS Nerd Font:size=8;
modules-left        = powermenu bspwm
modules-center      = spotibar
modules-right       = weather backlight volume battery network eth date dropbox
spacing             = 1
padding-left        = 1
padding-right       = 1
scroll-up           = bspwm-desknext
scroll-down         = bspwm-deskprev

