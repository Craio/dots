#! /bin/sh
#█▓▒░ kill previous applications
killall -9 sxhkd dropbox compton polybar quickserve
#█▓▒░  monitor setting
#xrandr --output LVDS-0 --auto --rotate normal --pos 0x0 --output DP-0 --auto --rotate normal --left-of LVDS-0 --output VGA-0 --right-of LVDS-0 &

#█▓▒░
#█▓▒░ randomly set theme on load
chosenSetupFilePath=$(shuf -n1 -e ~/scripts/setups/*)
wal -i ${chosenSetupFilePath}/wallpaper.jpg -o /home/craig/scripts/spotipy -g


#█▓▒░
#█▓▒░ relaunch programs
sxhkd &
dropbox &
compton &
. $HOME/scripts/mouse &
. $HOME/scripts/bars &
quickserve .cache/wal/ &

#█▓▒░
#█▓▒░ source pywal colors
. "${HOME}/.cache/wal/colors.sh"
xrdb -merge ${HOME}/.cache/wal/colors.Xresources

#█▓▒░
#█▓▒░ bspwm settings // ० ० ० ० ०

bspc monitor DP-2 -d एक दो तीन चार पांच
bspc monitor HDMI-0 -d छह सात आठ नौ दस

bspc config border_width         5
bspc config window_gap           25

bspc config split_ratio          0.50
bspc config top_padding          90
bspc config bottom_padding       25
bspc config left_padding         25
bspc config right_padding        25
bspc config borderless_monocle   true
bspc config gapless_monocle      true
bspc config focus_follows_pointer true

#█▓▒░
#█▓▒░ Set window colors from script.
bspc config normal_border_color "$color5"
bspc config active_border_color "$color2"
bspc config focused_border_color "$color2"
bspc config presel_feedback_color "$color2"

#█▓▒░
#█▓▒░ bspwm set workspaces
bspc rule -a Atom desktop='^3'
bspc rule -a discord desktop='^4'
bspc rule -a Spotify desktop='^4'
#█▓▒░  bspwm set Authy Chrome app to floating
bspc rule -a *:crx_gaedmjdfmmahhbjefcbgaolhhanlaolb state=floating
bspc config external_rules_command    "$HOME/scripts/bspwm-rules"
